<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="keiransaxty.trueorfalse.QuestionScreen"
    android:background="#E8EAF6">

    <TextView
        android:id="@+id/menuTitleLbl"
        android:text="True Or False"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/playGameBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Play"
        android:textSize ="20sp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/scoreScreenBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Leaderboard"
        android:textSize ="20sp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/playGameBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/aboutBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="About"
        android:textSize ="20sp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/scoreScreenBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Exit"
        android:textSize ="20sp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/aboutBtn"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
