<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="keiransaxty.trueorfalse.QuestionScreen"
    android:background="#E8EAF6">

    <TextView
    android:id="@+id/guideTitleLbl"
    android:text="How To Play"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="40sp"
    android:gravity="center"
    android:layout_marginTop="20dp" />

    <TextView
    android:id="@+id/guideMessageLbl"
    android:text="@string/guideMessage"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:gravity="left"
    android:layout_marginTop="40dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/guideTitleLbl"/>

    <TextView
        android:id="@+id/guideMessageLbl2"
        android:text="@string/guideMessage2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/guideMessageLbl"/>

    <TextView
        android:id="@+id/guideMessageLbl3"
        android:text="@string/guideMessage3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/guideMessageLbl2"/>

    <Button
        android:id="@+id/playBtn"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:text="Select difficulty"
        android:textSize ="20sp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/guideMessageLbl3"/>


</RelativeLayout>
