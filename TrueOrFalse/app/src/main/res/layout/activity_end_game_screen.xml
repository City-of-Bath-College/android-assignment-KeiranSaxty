<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="keiransaxty.trueorfalse.QuestionScreen"
    android:background="#E8EAF6"
    >

    <TextView
        android:id="@+id/endMessageLbl"
        android:text="You have answered all of the questions!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="10dp" />



    <EditText android:id="@+id/playerNameFld"
        android:layout_weight="1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:hint="Enter your name"
        android:textSize="25sp"
        android:inputType="textCapWords"
        android:gravity="center"
        android:layout_below="@+id/endMessageLbl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/finalScoreLbl"
        android:text="Final Score: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/playerNameFld"
        />

    <Button
        android:id="@+id/submitScoreBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Submit Score"
        android:textSize ="20sp"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/finalScoreLbl"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/scoreScreenBtn"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="Leaderboard"
        android:textSize ="15sp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/submitScoreBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/menuScreenBtn"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="Menu"
        android:textSize ="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/scoreScreenBtn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
