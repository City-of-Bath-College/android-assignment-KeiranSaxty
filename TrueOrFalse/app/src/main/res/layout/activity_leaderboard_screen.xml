<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="keiransaxty.trueorfalse.QuestionScreen"
    android:background="#E8EAF6"
    >

    <TextView
        android:id="@+id/leaderBoardLbl"
        android:text="Leaderboard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:gravity="left" />

    <ListView
        android:id="@+id/highScoresListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/leaderBoardLbl"
        />

    <Button
        android:id="@+id/resetScoresBtn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:text="Clear"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_alignRight="@+id/leaderBoardLbl"
        android:layout_below="@+id/titleLbl"

        />

    <TextView
        android:id="@+id/emptyMessageLbl"
        android:text="There are no highscores at the moment."
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        />


</RelativeLayout>