<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="keiransaxty.trueorfalse.QuestionScreen"
    android:background="#E8EAF6"
    >

    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_above="@+id/questionLbl"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/questionLbl"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="22sp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/trueBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/questionLbl"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:text="TRUE"
        android:textSize ="24sp"
        android:padding="10dp"
        />


    <Button
        android:id="@+id/falseBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/questionLbl"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="FALSE"
        android:textSize ="24sp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/scoreCounterLbl"
        android:text="Score: 0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>



</RelativeLayout>
